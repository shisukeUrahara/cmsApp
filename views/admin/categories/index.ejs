<%-include('../../partials/admin/head')%>
<div class="row">

    <div class="col-sm-4">
        <h1>Create Category</h1>
        <form action="/admin/categories/create" method="post">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" name="name" placeholder="Enter title" class="form-control">
                </div>

            <button class="btn btn-primary">Create Category</button>
        </form>
    </div>

    <br>

    <hr>

</div>

<br>

<div class="row">

    <div class="col-sm-8">

        <h1>Categories</h1>

        <table class="table">

            <thead>
            <tr>
                <th>id</th>
                <th>Name</th>

            </tr>
            </thead>
            <tbody>

            <!-- {{#each categories}} -->
            <% categories.forEach(function(category){%>


                <tr>
                    <td><%=category._id%></td>
                    <td><%=category.name%></td>
                    <td><a href="/admin/categories/edit/<%=category.id%>" class="btn btn-info">Edit</a></td>

                    <td>

                        <form action="/admin/categories/<%=category.id%>?_method=DELETE" method="post">

                            <button class="btn btn-danger">Delete</button>



                        </form>



                    </td>

                </tr>

            <!-- {{/each}} -->
            <%})%>


            </tbody>




        </table>



    </div>



</div>
<%-include('../../partials/admin/body')%>